<div>
    <div class="table-responsive">
      <table class="table table-sm table-borderless">
        {% assign awards = site.awards | reverse %}
        {% for item in awards %}
          <tr>
            <td class="bullet-cell">
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
</div>

